{{#if article.owner}}
<div class="container-fluid mt-3">
  <div class="row text-right">
    {{> editDelete}}
  </div>
</div>
{{/if}}
<article class="container-fluid mt-3">
  <div class="row justify-content-md-center">
    <div class="col-6">
      <img src="{{article.img}}" alt"" class="img-fluid rounded float-center">
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-6">
      <h1>{{article.title}}</h1>
      <p>By <a href="/users/{{article.authorId}}">{{article.author}}</a> Created on {{article.creationMonth}},
        {{article.creationYear}}</p>
      <p class="float-center">{{article.content}}</p>
    </div>
  </div>
</article>